# Maintainer: Daniel Micay <danielmicay@gmail.com>
pkgname=python-scrypt
true && pkgname=(python-scrypt python2-scrypt)
pkgver=0.5.5
pkgrel=1
pkgdesc='Bindings for the scrypt key derivation function library'
arch=(i686 x86_64)
url='http://pypi.python.org/pypi/scrypt/0.5.5'
license=('BSD')
depends=('python')
makedepends=()
options=(!emptydirs)
source=('http://pypi.python.org/packages/source/s/scrypt/scrypt-0.5.5.tar.gz')
md5sums=(70ad94b12018df0afa12f3ea1a421685)

package_python-scrypt() {
  cd "$srcdir/scrypt-$pkgver"
  python setup.py install --root="$pkgdir/" --optimize=1
}

package_python2-scrypt() {
  true && depends=(python2)
  cd "$srcdir/scrypt-$pkgver"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}
