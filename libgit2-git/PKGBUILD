_gitname=libgit2
pkgname=libgit2-git
pkgver=20121101
pkgrel=1
pkgdesc='a linkable library for git'
arch=('i686' 'x86_64')
url="https://github.com/libgit2/libgit2"
license=('GPL2')
depends=('openssl' 'zlib')
makedepends=('git' 'cmake')
provides=('libgit2')
conflicts=('libgit2')
source=(git://github.com/libgit2/libgit2.git)
md5sums=(SKIP)

build() {
  cd $_gitname
  cmake . -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr -DBUILD_CLAR=OFF
  make
}

package() {
  make -C $_gitname DESTDIR="$pkgdir" install
}
